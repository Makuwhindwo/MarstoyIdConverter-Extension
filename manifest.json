{
  "manifest_version": 2,
  "name": "Marstoy Product Title Updater",
  "version": "1.0",
  "description": "Updates product titles on Marstoy by checking against Bricklink.",
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "permissions": [
    "activeTab",
    "https://www.marstoy.com/",
    "https://www.bricklink.com/"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.marstoy.com/*"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html"
  }
}
