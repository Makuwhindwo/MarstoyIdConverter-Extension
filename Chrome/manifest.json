{
  "manifest_version": 2,
  "name": "Marstoy Id Converter",
  "version": "1.0",
  "description": "Updates product titles on Marstoy by checking against Rebrickable.",
  "permissions": [
    "activeTab",
    "https://www.marstoy.com/",
    "https://rebrickable.com/"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.marstoy.com/*"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html"
  }
}
